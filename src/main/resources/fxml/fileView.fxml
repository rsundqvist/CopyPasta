<BorderPane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/9.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.feedback.FileViewController">
    <top>
        <GridPane maxWidth="1.7976931348623157E308" BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
            </columnConstraints>
            <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            </rowConstraints>
            <children>
                <Label fx:id="fileLabel" alignment="CENTER" maxWidth="1.7976931348623157E308" prefHeight="7.0" prefWidth="600.0" text="Drag and drop to add files!">
                    <padding>
                        <Insets left="5.0" />
                    </padding>
                    <font>
                        <Font name="System Bold" size="17.0" />
                    </font>
                </Label>
                <StackPane GridPane.rowIndex="1">
                    <children>
                        <HBox maxHeight="-Infinity" maxWidth="1.7976931348623157E308" minHeight="-Infinity" minWidth="-Infinity" prefHeight="35.0" prefWidth="200.0" GridPane.columnSpan="2147483647" GridPane.hgrow="ALWAYS" GridPane.rowIndex="1">
                            <children>
                                <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#onFeedback" prefWidth="80.0" text="Feedback">
                                    <HBox.margin>
                                        <Insets right="5.0" />
                                    </HBox.margin>
                                    <tooltip>
                                        <Tooltip text="Create feedback at the caret. The program will attempt to find the file in the feedback by looking for the %FILE:&lt;filename&gt;% tag." />
                                    </tooltip>
                                </Button>
                                <VBox prefHeight="200.0">
                                    <children>
                                        <CheckBox mnemonicParsing="false" onAction="#toggleFeedbackLine" selected="true" text="Line" />
                                        <CheckBox mnemonicParsing="false" onAction="#toggleFeedbackColumn" text="Column" />
                                    </children>
                                </VBox>
                                <Pane maxHeight="0.0" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" prefHeight="0.0" HBox.hgrow="ALWAYS" />
                                <Pane maxHeight="0.0" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" prefHeight="0.0" HBox.hgrow="ALWAYS" />
                                <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#onIndent" prefWidth="80.0" text="Indent">
                                    <tooltip>
                                        <Tooltip text="Indent using the currently selected indentation style. Default is &quot;google&quot;." />
                                    </tooltip>
                                    <HBox.margin>
                                        <Insets right="5.0" />
                                    </HBox.margin>
                                </Button>
                                <ToggleButton maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#toggleEditable" prefWidth="80.0" text="Edit">
                                    <HBox.margin>
                                        <Insets right="3.0" />
                                    </HBox.margin>
                                    <tooltip>
                                        <Tooltip text="Edit the file manually." />
                                    </tooltip>
                                </ToggleButton>
                                <Separator orientation="VERTICAL" prefHeight="200.0">
                                    <HBox.margin>
                                        <Insets left="2.0" right="2.0" />
                                    </HBox.margin>
                                </Separator>
                                <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#onAdd" prefWidth="80.0" text="Add">
                                    <tooltip>
                                        <Tooltip text="Add a copy of a file." />
                                    </tooltip>
                                    <HBox.margin>
                                        <Insets right="5.0" />
                                    </HBox.margin>
                                </Button>
                                <Button maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#onDelete" prefWidth="80.0" text="Delete">
                                    <tooltip>
                                        <Tooltip text="Delete the file from the feedback. The original file will not be altered." />
                                    </tooltip>
                                </Button>
                            </children>
                            <padding>
                                <Insets top="1.0" />
                            </padding>
                            <GridPane.margin>
                                <Insets bottom="2.0" left="2.0" right="2.0" top="2.0" />
                            </GridPane.margin>
                            <StackPane.margin>
                                <Insets left="2.0" right="2.0" />
                            </StackPane.margin>
                        </HBox>
                        <Label fx:id="copiedLabel" alignment="CENTER" contentDisplay="CENTER" focusTraversable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" mouseTransparent="true" text="Feedback Inserted!" textFill="RED" StackPane.alignment="CENTER">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                    </children>
                    <GridPane.margin>
                        <Insets bottom="2.0" />
                    </GridPane.margin>
                </StackPane>
            </children>
        </GridPane>
    </top>
    <center>
        <TabPane fx:id="sourceTabs" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" onDragDropped="#onDragDropped" onDragOver="#onDragOver" prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: #123456;" tabClosingPolicy="UNAVAILABLE" BorderPane.alignment="CENTER">
            <contextMenu>
                <ContextMenu>
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#onFeedback" text="Feedback">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="F" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                    </items>
                </ContextMenu>
            </contextMenu>
        </TabPane>
    </center>
</BorderPane>
