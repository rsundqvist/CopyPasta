<VBox maxHeight="1.7976931348623157E308" maxWidth="300.0" minHeight="0.0" minWidth="20.0" prefHeight="375.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gui.PastaViewController">
    <children>
        <SplitPane dividerPositions="0.25, 0.75" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0" VBox.vgrow="ALWAYS">
            <items>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="30.0" minWidth="0.0" prefHeight="200.0" prefWidth="100.0">
                    <children>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Pasta Tag Filtering">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                        </Label>
                        <HBox>
                            <children>
                                <Label maxHeight="1.7976931348623157E308" text="Filter mode" HBox.hgrow="NEVER" />
                                <Pane maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" prefWidth="0.0" HBox.hgrow="ALWAYS" />
                                <CheckBox maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#toggleNotTag" text="Not">
                                    <tooltip>
                                        <Tooltip text="Complement" />
                                    </tooltip>
                                    <padding>
                                        <Insets right="5.0" />
                                    </padding>
                                </CheckBox>
                                <RadioButton maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#matchAnyTag" selected="true" text="Any" HBox.hgrow="NEVER">
                                    <toggleGroup>
                                        <ToggleGroup fx:id="filterMode" />
                                    </toggleGroup>
                                    <padding>
                                        <Insets right="5.0" />
                                    </padding>
                                    <tooltip>
                                        <Tooltip text="Union" />
                                    </tooltip>
                                </RadioButton>
                                <RadioButton maxHeight="1.7976931348623157E308" mnemonicParsing="false" onAction="#matchAllTag" text="All  " toggleGroup="$filterMode" HBox.hgrow="NEVER">
                                    <tooltip>
                                        <Tooltip text="Intersect" />
                                    </tooltip>
                                </RadioButton>
                            </children>
                            <VBox.margin>
                                <Insets left="5.0" right="5.0" />
                            </VBox.margin>
                        </HBox>
                        <GridPane>
                            <columnConstraints>
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
                                <ColumnConstraints halignment="RIGHT" hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                            </columnConstraints>
                            <rowConstraints>
                                <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
                            </rowConstraints>
                            <children>
                                <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Available filters" GridPane.columnIndex="1">
                                    <font>
                                        <Font name="System Bold Italic" size="11.0" />
                                    </font>
                                </Label>
                                <Button maxHeight="1.7976931348623157E308" maxWidth="-Infinity" minHeight="0.0" minWidth="-Infinity" mnemonicParsing="false" onAction="#clearTagFilters" prefHeight="20.0" prefWidth="45.0" text="Clear">
                                    <font>
                                        <Font size="9.0" />
                                    </font>
                                    <GridPane.margin>
                                        <Insets left="5.0" />
                                    </GridPane.margin>
                                </Button>
                                <ToggleButton mnemonicParsing="false" onAction="#toggleCurrentAssignmentOnly" text="Assignment" GridPane.columnIndex="2">
                                    <GridPane.margin>
                                        <Insets right="5.0" />
                                    </GridPane.margin>
                                    <font>
                                        <Font size="9.0" />
                                    </font>
                                    <tooltip>
                                        <Tooltip text="If selected, any items associated solely with other assignment(s) are hidden.">
                                            <font>
                                                <Font size="13.0" />
                                            </font>
                                        </Tooltip>
                                    </tooltip>
                                </ToggleButton>
                            </children>
                        </GridPane>
                        <FlowPane fx:id="filterFlowPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" prefHeight="5.0" VBox.vgrow="ALWAYS">
                            <padding>
                                <Insets left="1.0" top="1.0" />
                            </padding>
                        </FlowPane>
                    </children>
                </VBox>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="30.0" minWidth="0.0">
                    <children>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Pasta" VBox.vgrow="NEVER">
                            <font>
                                <Font name="System Bold" size="14.0" />
                            </font>
                            <tooltip>
                                <Tooltip text="Availabile (filtered) pasta. Using Ctrl+C on an item here will copy the content of the pasta to the clipboard." />
                            </tooltip>
                        </Label>
                        <TextField fx:id="searchField" promptText="Search on comma separated content, tags, title, ..." />
                        <ListView fx:id="listView" editable="true" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="30.0" minWidth="0.0" onMouseClicked="#onMouseClicked" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
                            <opaqueInsets>
                                <Insets />
                            </opaqueInsets>
                            <contextMenu>
                                <ContextMenu>
                                    <items>
                              <MenuItem mnemonicParsing="false" onAction="#quickInsert" text="Quick insert at caret">
                                 <accelerator>
                                    <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                 </accelerator>
                              </MenuItem>
                                        <MenuItem mnemonicParsing="false" onAction="#copyItem" text="Copy content to clipboard">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="C" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem mnemonicParsing="false" onAction="#preview" text="Preview" />
                                        <SeparatorMenuItem mnemonicParsing="false" />
                                        <MenuItem mnemonicParsing="false" onAction="#exportPastaTXT" text="Export .txt" />
                                        <MenuItem mnemonicParsing="false" onAction="#exportPastaJSON" text="Export .json" />
                                        <SeparatorMenuItem mnemonicParsing="false" />
                                        <MenuItem mnemonicParsing="false" onAction="#delete" text="Delete" />
                                    </items>
                                </ContextMenu>
                            </contextMenu>
                        </ListView>
                    </children>
                </VBox>
                <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="30.0" minWidth="0.0">
                    <children>
                        <Label alignment="CENTER" maxWidth="1.7976931348623157E308" text="Pasta Content" VBox.vgrow="NEVER">
                            <font>
                                <Font name="System Bold" size="12.0" />
                            </font>
                            <tooltip>
                                <Tooltip text="The content of the selected pasta. The text in this box will be copied when you use Ctrl+C on an item in the list above." />
                            </tooltip>
                        </Label>
                        <TextArea fx:id="previewTextArea" editable="false" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="200.0" promptText="No item selected." wrapText="true" VBox.vgrow="ALWAYS" />
                    </children>
                </VBox>
            </items>
        </SplitPane>
    </children>
</VBox>
